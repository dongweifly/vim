{
    "suggest.noselect": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--compile-commands-dir=build"
            ],
            "rootPatterns": [
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.work",
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    }
}

